<%- include('../../partials/navbar'); %>

<div class="container"><br>
    <div class="card">
        <div class="card-header">
            <h2>Edição de categoria</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/categories/update">
                <input class="form-control" type="text" name="title" placeholder="Defina o título da categoria..." value="<%= category.title %>">
                <input type="hidden" name="id" value="<%= category.id %>">
                <br><a style="float: right;" href="/admin/categories" class="btn btn-secondary">Voltar</a>
                <button style="float: right; margin-right: 5px" class="btn btn-primary">Atualizar</button>
            </form>
        </div>
    </div>
</div>

