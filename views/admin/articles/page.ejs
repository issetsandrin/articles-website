<%- include('../../partials/header'); %>
<%- include('../../partials/homenavbar'); %>
   
<body>
    <hr>
    <div class="container">
        <tbody>
            <% result.articles.rows.forEach(article => { %>
                <div class="card">
                    <div class="card-header">
                        <h3><%= article.title %></h3>
                    </div>
                    <div class="card-body">
                        <a href="/<%= article.slug %>" class="btn btn-info">Acessar artigo</a>
                    </div>
                </div>
                <br>
            <% }); %>
        </tbody>
        <div class="row">
            <div class="col col-12">
                <% if(result.page > 2) { %>
                    <a href="/article/page/<%= result.page - 1 %>" style="text-decoration: none; float: left; font-size: 15px;"> ⏮️ Voltar pagina</a>
                <% } else if (result.page == 2) { %>
                    <a href="/article/page/<%= result.page - 1 %>" style="text-decoration: none; float: left; font-size: 15px;"> ⏮️ Voltar pagina</a>
                <% } %>
                <% if(result.next) { %>
                     <a href="/" style="text-decoration: none; float: right; font-size: 15px;"> Proxima pagina ⏭️</a> 
                <% } %>
            </div>
        </div><br>
    </div>
</body>

<%- include('../../partials/footer'); %>
 