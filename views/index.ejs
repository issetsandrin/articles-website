            <p class="lead">
              <a class="btn btn-primary btn-lg" href="#" role="button">Saiba mais</a>
            </p>
          </div>
        <tbody>
            <% articles.forEach(article => { %>
                <div class="card">
                    <div class="card-header">
                        <h3><%= article.title %></h3>
                    </div>
                    <div class="card-body">
                        <a href="/<%= article.slug %>" class="btn btn-info">Acessar artigo</a>
                    </div>
                </div>
                <br>
            <% }); %>
        </tbody>
        <div class="row">
            <div class="col col-12">
                <a href="/article/page/2" style="text-decoration: none; float: right; font-size: 15px;">Proxima pagina ⏭️</a> 
            </div>
        </div><br>
    </div>
</body>

