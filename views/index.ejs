<%- include('partials/header'); %>
<%- include('partials/homenavbar'); %>
   
<body>
    <hr>
    <div class="container">
        <div class="jumbotron">
            <h2 class="display-4">Bem vindo!</h2>
            <p class="lead">Esse é apena um blog criado por mim!</p>
